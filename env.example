# Project Setu - Environment Configuration Template
# Copy this file to .env and update the values

# Application Settings
ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=sqlite:///./project_setu.db

# WHO ICD-11 API Configuration (for production use)
WHO_CLIENT_ID=your-who-client-id
WHO_CLIENT_SECRET=your-who-client-secret
WHO_API_URL=https://id.who.int

# ABHA Authentication (Indian National Health ID)
ABHA_API_URL=https://dev.abdm.gov.in
ABHA_CLIENT_ID=your-abha-client-id
ABHA_CLIENT_SECRET=your-abha-client-secret

# External Service URLs
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:8501

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/project-setu.log

# Security Settings
CORS_ORIGINS=["http://localhost:8501", "http://localhost:3000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# AI/ML Configuration
VECTOR_DB_PATH=./vector_db
MODEL_CACHE_PATH=./cache/models

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
PROMETHEUS_ENABLED=false
